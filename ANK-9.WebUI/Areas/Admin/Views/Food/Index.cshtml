@model ResultService<FoodListVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@{
    if (Model.HasError)
    {
        <h4>@Model.Errors.FirstOrDefault().ErrorMessage</h4>
        <h4>@Model.Errors.FirstOrDefault().ErrorType</h4>
    }
    if (TempData["result"]!=null)
    {
        <h4>@TempData["result"].ToString()</h4>
    }
}

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Data.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.FoodName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ListData) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                    @Html.ActionLink("Update", "Update", new { id=item.Id  },new{@class="btn btn-info"} ) |
                    @Html.ActionLink("Details", "Details", new {id=item.Id  },new{@class="btn btn-warning"}) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id  },new{@class="btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
